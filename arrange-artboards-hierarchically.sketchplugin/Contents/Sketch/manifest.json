{
  "$schema": "https://raw.githubusercontent.com/sketch-hq/SketchAPI/develop/docs/sketch-plugin-manifest-schema.json",
  "commands": [
    {
      "handlers": {
        "run": "ArrangeArtboardsInColumns"
      },
      "identifier": "arrange-artboards-hierarchically.arrange-in-rows",
      "name": "Arrange In Columns",
      "script": "__main.js",
      "shortcut": "ctrl shift v"
    },
    {
      "handlers": {
        "run": "ArrangeArtboardsInRows"
      },
      "identifier": "arrange-artboards-hierarchically.arrange-in-columns",
      "name": "Arrange In Rows",
      "script": "__main.js",
      "shortcut": "ctrl shift h"
    }
  ],
  "icon": "icon.png",
  "menu": {
    "items": [
      "arrange-artboards-hierarchically.arrange-in-columns",
      "arrange-artboards-hierarchically.arrange-in-rows"
    ],
    "title": "Arrange Artboards"
  },
  "version": "1.0.0",
  "description": "Arrange artboards hierarchically depending on their name (based on the Sketch Slash naming pattern).",
  "name": "arrange-artboards-hierarchically",
  "identifier": "arrange-artboards-hierarchically",
  "disableCocoaScriptPreprocessor": true,
  "appcast": "https://raw.githubusercontent.com/gbrunow/arrange-artboards-hierarchically/master/.appcast.xml",
  "author": "Gui Brunow Gomes",
  "authorEmail": "gbrunow@outlook.com"
}